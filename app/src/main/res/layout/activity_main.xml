<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView

        android:layout_width="152dp"
        android:layout_height="130dp"
        android:layout_marginTop="25dp"
        android:id="@+id/owl_view"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="@id/text_view"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@id/text_view"
        app:layout_constraintTop_toBottomOf="@id/text_view" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:src="@drawable/img_1"
        android:layout_marginTop="100dp"

        app:layout_constraintStart_toStartOf="@id/owl_view"
        app:layout_constraintEnd_toEndOf="@id/owl_view"
        app:layout_constraintTop_toBottomOf="@id/owl_view"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/text_view"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--------or--------"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="225dp"
        app:layout_constraintTop_toBottomOf="@id/owl_view"
        app:layout_constraintEnd_toEndOf="@id/owl_view"
        app:layout_constraintStart_toStartOf="@id/owl_view"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="426dp" />

    <Button
        android:layout_width="309dp"
        android:layout_height="57dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/teal_700"
        app:cornerRadius="20dp"
        android:text="GAME NOW"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/image_view"
        app:layout_constraintStart_toStartOf="@id/image_view"
        app:layout_constraintTop_toBottomOf="@id/image_view" />

    <Button
        app:cornerRadius="20dp"
        android:layout_width="331dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/whiteBlue"
        android:text="Log in with Facebook"

        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/log_in"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        app:layout_constraintEnd_toEndOf="@id/image_view"
        app:layout_constraintStart_toStartOf="@id/image_view"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="328dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/owl_view"
        app:layout_constraintEnd_toEndOf="@id/owl_view"
        app:layout_constraintStart_toStartOf="@id/owl_view"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="143dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:layout_width="258dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/white"
        android:text="up with Email"
        app:cornerRadius="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="420dp"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        app:layout_constraintEnd_toEndOf="@id/text_view"
        app:layout_constraintStart_toStartOf="@id/text_view"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="462dp" />

</androidx.constraintlayout.widget.ConstraintLayout>